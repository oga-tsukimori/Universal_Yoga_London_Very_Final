<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_yoga_class">

    <fragment
        android:id="@+id/nav_yoga_class"
        android:name="com.example.universalyogalondon.fragment.YogaClassFragment"
        android:label="Yoga Class"
        tools:layout="@layout/fragment_yoga_course" >
        <action
            android:id="@+id/action_nav_yoga_class_to_addCourseFragment"
            app:destination="@id/addCourseFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_class_calendar"
        android:name="com.example.universalyogalondon.fragment.ClassCalendarFragment"
        android:label="Class Calendar"
        tools:layout="@layout/fragment_class_calendar" />

    <fragment
        android:id="@+id/nav_user_profile"
        android:name="com.example.universalyogalondon.fragment.UserProfileFragment"
        android:label="User Profile"
        tools:layout="@layout/fragment_user_profile" />
    <fragment
        android:id="@+id/addCourseFragment"
        android:name="com.example.universalyogalondon.fragment.AddCourseFragment"
        android:label="fragment_add_course"
        tools:layout="@layout/fragment_add_course" />

</navigation>
